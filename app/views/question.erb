<div class="container">
  <h1><%= @card.shuffled_deck.name %> Flashcards</h1>
  
  <p><%= @card.question %></p>
  <p>(<%= @card.answer %>)</p>

  <form name="form" action="/<%= @user_name %>/decks/<%= @shuffled_deck_id %>/<%= @round_id %>" method="post">
      <input type="text" name="answer">
      <input type="submit" value="submit">
      <input type="hidden" name="card_id" value="<%= @card.id %>">
  </form>
</div>


