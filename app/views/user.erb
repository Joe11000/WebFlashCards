<!-- view -->
<div class="container">
  <h1><%= @user.name %>'s Page</h1>

  <ul>
    <li><a href="/decks">Select a Deck</a></li>
    <li>Create a Deck</li>
  </ul>

  <% if !@rounds.empty? %>
    <h3>Previous Games Statistic</h3>
    <h4>Statistics By Round</h4>
    <ul>
      <% @rounds.each_with_index do |round, index|%>
        <li>Deck "<%= round.shuffled_deck.name %>" Game <%= @rounds.size - index %> : <%= round.score %>%</li>
      <% end %>
    </ul>

    <h4>Statistics By Deck</h4>
    <ul>
      <% @rounds.each_with_index do |round, index|%>
        <li>Deck "<%= round.shuffled_deck.name %>" : <%= round.score %>%</li>
      <% end %>
    </ul>
  <% end %>
  
</div>

